<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/stats_layout"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_background" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/blurb_icon_bg_elevation">

            <ImageView
                android:layout_width="232dp"
                android:layout_height="232dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_background_big_b" />

            <ImageView
                android:layout_width="72dp"
                android:layout_height="64dp"
                android:layout_gravity="top|end"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                android:elevation="@dimen/blurb_icon_bell_elevation"
                android:src="@drawable/ic_bell" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/blurb_icon_b_elevation">

                <ImageView
                    android:layout_width="155dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_big_b" />

            </FrameLayout>

        </FrameLayout>

    </FrameLayout>

</FrameLayout>